{
  "semi": true,
  "singleQuote": true,
  "tabWidth": 2,
  "printWidth": 100,
  "trailingComma": "es5",
  "arrowParens": "always",
  "endOfLine": "lf",
  "bracketSpacing": true,
  "vueIndentScriptAndStyle": true,
  "plugins": ["prettier-plugin-tailwindcss"],
  "overrides": [
    { "files": "*.yml", "options": { "singleQuote": false } },
    { "files": ["*.md", "*.mdx"], "options": { "proseWrap": "always" } }
  ]
}
